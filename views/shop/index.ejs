<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
<div>
    <img src="https://cdn.glitch.me/ecfc9c03-d988-47a8-a8ef-305ee5cbb63b%2FHome%20Banner.jpg" class="heroimg">
</div>
    <main>
        <% if (prods.length > 0) { %>
            <div class="<%= pageTitle %>-grid grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                            <a href="/products/<%= product._id %>" class="card card_hover">   <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                    </a>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>